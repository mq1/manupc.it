---
import logoImage from "../assets/logo.jpeg";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Il tuo mini PC, come lo vuoi tu" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={logoImage.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col h-screen">
    <div class="navbar bg-base-100">
      <div class="flex-1">
        <a class="btn btn-ghost text-xl" href="/">ManuPC.it</a>
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal px-1">
          <li>
            <a href="https://www.instagram.com/manupc.it" target="_blank">
              <Icon name="simple-icons:instagram" class="text-2xl" />
            </a>
          </li>
          <li>
            <a href="https://www.tiktok.com/@manupc.it" target="_blank">
              <Icon name="simple-icons:tiktok" class="text-2xl" />
            </a>
          </li>
        </ul>
      </div>
    </div>
    <main class="flex-1 p-8">
      <slot />
    </main>
    <footer
      class="footer footer-center p-10 bg-base-200 text-base-content rounded"
    >
      <aside>
        <p class="font-bold">ManuPC.it</p>
        <p>
          Copyright (c) 2024 Quarneti Manuel<br />
          Cotignola 48033, Via Fratelli Kennedy 21<br />
          P. Iva: 02764790396
        </p>
      </aside>
    </footer>
  </body>
</html>
