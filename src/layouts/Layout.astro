---
import { Image } from "astro:assets";
import logoImage from "../assets/logo.jpeg";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Il tuo mini PC, come lo vuoi tu" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={logoImage.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col gap-8 h-screen">
    <div class="navbar bg-base-100">
      <a class="btn btn-ghost text-xl" href="/">
        <Image src={logoImage} alt="logo" width={32} class="rounded-lg" />
        ManuPC.it
      </a>
    </div>
    <main class="flex-1">
      <slot />
    </main>
    <footer class="footer footer-center p-10 bg-base-200 text-base-content rounded">
      <nav class="grid grid-flow-col gap-4">
        <a href="https://www.instagram.com/manupc.it" target="_blank">
          <Icon name="simple-icons:instagram" class="text-2xl" />
        </a>
        <a href="https://www.tiktok.com/@manupc.it" target="_blank">
          <Icon name="simple-icons:tiktok" class="text-2xl" />
        </a>
      </nav>
      <aside>
        <p>
          Copyright (c) 2024 Quarneti Manuel<br />
          Cotignola 48033, Via Fratelli Kennedy 21<br />
          P. Iva: 02764790396
        </p>
      </aside>
    </footer>
  </body>
</html>
