---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col w-full h-screen items-center justify-between bg-neutral-100">
		<div class="navbar bg-base-100">
			<a class="btn btn-ghost text-xl" href="/">
				<img src="/logo.jpeg" class="h-8 rounded-lg" />
				ManuPC.it
			</a>
		</div>
		<main class="w-full h-full p-4 bg-base-200">
			<slot />
		</main>
		<footer class="p-10 bg-base-100 w-full flex items-center justify-center">
			Copyright (c) 2024 Quarneti Manuel
		</footer>
	</body>
</html>
