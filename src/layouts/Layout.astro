---
import logoImage from "../assets/logo.jpeg";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Il tuo mini PC, come lo vuoi tu" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={logoImage.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col h-screen">
    <div class="navbar bg-base-100">
      <div class="navbar-start">
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
            <Icon name="mdi:menu" class="text-xl" />
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
            <li><a href="/info">Info</a></li>
          </ul>
        </div>
      </div>
      <div class="navbar-center">
        <a class="btn btn-ghost text-xl" href="/">ManuPC.it</a>
      </div>
      <div class="navbar-end">
        <a href="https://www.instagram.com/manupc.it" target="_blank" class="btn btn-ghost btn-circle">
          <Icon name="simple-icons:instagram" class="text-2xl" />
        </a>
        <a href="https://www.tiktok.com/@manupc.it" target="_blank" class="btn btn-ghost btn-circle">
          <Icon name="simple-icons:tiktok" class="text-2xl" />
        </a>
      </div>
    </div>
    <main class="flex-1 p-8">
      <slot />
    </main>
    <footer
      class="footer footer-center p-10 bg-base-200 text-base-content rounded"
    >
      <aside>
        <p class="font-bold">ManuPC.it</p>
        <p>
          Copyright (c) 2024 Quarneti Manuel<br />
          Cotignola 48033, Via Fratelli Kennedy 21<br />
          P. Iva: 02764790396
        </p>
      </aside>
    </footer>
  </body>
</html>
