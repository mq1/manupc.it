---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Il tuo mini PC, come lo vuoi tu" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.jpeg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col w-full 2xl:h-screen items-center 2xl:justify-between bg-neutral-100">
		<div class="navbar bg-base-100">
			<a class="btn btn-ghost text-xl" href="/">
				<img src="/logo.jpeg" class="h-8 rounded-lg" />
				ManuPC.it
			</a>
		</div>
		<main class="w-full h-full p-4 bg-base-200">
			<slot />
		</main>
		<footer class="text-sm p-10 bg-base-100 w-full flex flex-col gap-8 items-center justify-center">
			<p class="flex gap-8">
				<a href="https://www.instagram.com/manupc.it/" class="text-rose-500 font-bold">Instagram ↗️</a>
				<a href="https://www.tiktok.com/@manupc.it" class="text-blue-500 font-bold">TikTok ↗️</a>	
				<a href="mailto:manu@manupc.it" class="font-bold">manu@manupc.it</a>	
			</p>
			<div class="flex divide-x-2 divide-neutral-400">
				<p class="px-2">Copyright (c) 2024 Quarneti Manuel</p>
				<p class="px-2">Cotignola 48033, Via Fratelli Kennedy 21</p>
				<p class="px-2">P. Iva: 02764790396</p>
			</div>
		</footer>
	</body>
</html>
